<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.uk.kenkwok.tulipmania.ui.main.MainActivity">

    <TextView
        android:id="@+id/textView"
        style="@style/price_label_title"
        android:text="Market Buy Price:"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp" android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/hkdSwitch"/>

    <TextView
        android:id="@+id/textView2"
        style="@style/price_label_title"
        android:layout_marginTop="8dp"
        android:text="Market Sell Price:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginStart="24dp" />

    <TextView
        android:id="@+id/textView3"
        style="@style/price_label_title"
        android:layout_marginTop="8dp"
        android:text="Last Transaction Price:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginStart="24dp" />

    <TextView
        android:id="@+id/textView4"
        style="@style/price_label_title"
        android:layout_marginTop="8dp"
        android:text="24 Hour High:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_marginStart="24dp" />

    <TextView
        android:id="@+id/textView5"
        style="@style/price_label_title"
        android:layout_marginTop="8dp"
        android:text="24 Hour Low:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginStart="24dp" />

    <TextView
        android:id="@+id/buyTextView"
        style="@style/price_label"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="TextView"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/hkdSwitch"/>

    <TextView
        android:id="@+id/sellTextView"
        style="@style/price_label"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="TextView"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buyTextView"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:id="@+id/lastTransactionTextView"
        style="@style/price_label"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="TextView"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/sellTextView"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:id="@+id/dailyHighTextView"
        style="@style/price_label"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="TextView"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lastTransactionTextView"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintHorizontal_bias="0.5" />

    <TextView
        android:id="@+id/dailyLowTextView"
        style="@style/price_label"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="TextView"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/dailyHighTextView"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintHorizontal_bias="0.5" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="192dp" />

    <Switch
        android:id="@+id/hkdSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:text="Show HKD" app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>
